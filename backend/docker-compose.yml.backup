version: '3.8'

services:
  postgres:
    image: postgres:16-alpine
    container_name: cameroon_music_db
    restart: unless-stopped
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: cameroon_music_db
    ports:
      - '5432:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - cameroon_music_network

  redis:
    image: redis:7-alpine
    container_name: cameroon_music_redis
    restart: unless-stopped
    ports:
      - '6379:6379'
    volumes:
      - redis_data:/data
    networks:
      - cameroon_music_network

volumes:
  postgres_data:
  redis_data:

networks:
  cameroon_music_network:
    driver: bridge
