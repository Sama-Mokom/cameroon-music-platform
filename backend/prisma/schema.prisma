// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  ARTIST
  PROMOTER
  ADMIN
}

enum BookingStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum MatchStatus {
  PENDING
  REVIEWED
  CONFIRMED_DUPLICATE
  FALSE_POSITIVE
  REMIX
}

// User model with full authentication support
model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  role            UserRole @default(USER)
  isEmailVerified Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  refreshTokens         RefreshToken[]
  artistProfile         ArtistProfile?
  reviewedVerifications Verification[] // Verifications reviewed by this admin
  songs                 Song[]          // Songs uploaded by this artist
  duplicateReviews      DuplicateMatch[] // Duplicate matches reviewed by this admin

  @@map("users")
}

// Refresh token storage
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique @db.VarChar(500)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// Artist profile (separate from User for clean separation)
model ArtistProfile {
  id           String   @id @default(uuid())
  userId       String   @unique
  stageName    String?
  bio          String?  @db.Text
  genres       String?  @db.Text // JSON array stored as text
  tags         String?  @db.Text // JSON array stored as text
  phoneNumber  String?
  avatarUrl    String?
  coverUrl     String?
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  verification Verification?

  @@map("artist_profiles")
}

// Level-1 Verification (ID + Selfie)
model Verification {
  id              String             @id @default(uuid())
  artistProfileId String             @unique
  idType          String             // "national_id", "passport", "driver_license"
  idFileUrl       String
  selfieFileUrl   String
  status          VerificationStatus @default(PENDING)
  rejectionReason String?            @db.Text
  reviewedBy      String?            // Admin user ID who reviewed
  reviewedAt      DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  // Relations
  artistProfile ArtistProfile @relation(fields: [artistProfileId], references: [id], onDelete: Cascade)
  reviewer      User?         @relation(fields: [reviewedBy], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([artistProfileId])
  @@map("verifications")
}

// Song model for Milestone 4
model Song {
  id        String   @id @default(uuid())
  title     String
  genre     String?
  artistId  String
  audioUrl  String   @db.Text // Use TEXT to store long Cloudinary URLs
  publicId  String   @db.Text // Cloudinary public_id for deletion
  duration  Int?     // Duration in seconds
  size      Int?     // File size in bytes
  format    String?  // Audio format (mp3, wav, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  artist           User              @relation(fields: [artistId], references: [id], onDelete: Cascade)
  fingerprint      AudioFingerprint?
  originalMatches  DuplicateMatch[]  @relation("OriginalSong")
  duplicateMatches DuplicateMatch[]  @relation("DuplicateSong")

  @@index([artistId])
  @@index([createdAt])
  @@map("songs")
}

// Audio Fingerprint model for Milestone 5
model AudioFingerprint {
  id          String   @id @default(uuid())
  songId      String   @unique
  fingerprint String   @db.LongText // JSON array of landmarks
  duration    Int                   // Duration in seconds
  sampleRate  Int      @default(22050)
  createdAt   DateTime @default(now())

  // Relations
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
  @@map("audio_fingerprints")
}

// Duplicate Match model for Milestone 5
model DuplicateMatch {
  id                String      @id @default(uuid())
  originalSongId    String
  duplicateSongId   String
  similarity        Float                // Match score (0-100%)
  matchingLandmarks Int                  // Number of matching landmarks
  status            MatchStatus @default(PENDING)
  reviewedBy        String?              // Admin who reviewed
  reviewedAt        DateTime?
  resolution        String?              // Notes on resolution
  notes             String?     @db.Text
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  originalSong  Song  @relation("OriginalSong", fields: [originalSongId], references: [id], onDelete: Cascade)
  duplicateSong Song  @relation("DuplicateSong", fields: [duplicateSongId], references: [id], onDelete: Cascade)
  reviewer      User? @relation(fields: [reviewedBy], references: [id], onDelete: SetNull)

  @@index([originalSongId])
  @@index([duplicateSongId])
  @@index([status])
  @@map("duplicate_matches")
}
