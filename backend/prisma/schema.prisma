// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  ARTIST
  PROMOTER
  ADMIN
}

enum BookingStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum MatchStatus {
  PENDING
  REVIEWED
  CONFIRMED_DUPLICATE
  FALSE_POSITIVE
  REMIX
}

// User model with full authentication support
model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  role            UserRole @default(USER)
  isEmailVerified Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  refreshTokens         RefreshToken[]
  artistProfile         ArtistProfile?
  reviewedVerifications Verification[]   // Verifications reviewed by this admin
  songs                 Song[]            // Songs uploaded by this artist
  duplicateReviews      DuplicateMatch[]  // Duplicate matches reviewed by this admin
  playHistory           PlayHistory[]     // Songs played by this user
  favorites             Favorite[]        // User's favorite songs
  playlists             Playlist[]        // User's playlists
  following             Follow[]          @relation("Followers") // Artists this user follows
  followers             Follow[]          @relation("Following") // Users following this artist

  @@map("users")
}

// Refresh token storage
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique @db.VarChar(500)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// Artist profile (separate from User for clean separation)
model ArtistProfile {
  id           String   @id @default(uuid())
  userId       String   @unique
  stageName    String?
  bio          String?  @db.Text
  genres       String?  @db.Text // JSON array stored as text
  tags         String?  @db.Text // JSON array stored as text
  phoneNumber  String?
  avatarUrl    String?
  coverUrl     String?
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  verification Verification?

  @@map("artist_profiles")
}

// Level-1 Verification (ID + Selfie)
model Verification {
  id              String             @id @default(uuid())
  artistProfileId String             @unique
  idType          String             // "national_id", "passport", "driver_license"
  idFileUrl       String
  selfieFileUrl   String
  status          VerificationStatus @default(PENDING)
  rejectionReason String?            @db.Text
  reviewedBy      String?            // Admin user ID who reviewed
  reviewedAt      DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  // Relations
  artistProfile ArtistProfile @relation(fields: [artistProfileId], references: [id], onDelete: Cascade)
  reviewer      User?         @relation(fields: [reviewedBy], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([artistProfileId])
  @@map("verifications")
}

// Song model for Milestone 4
model Song {
  id        String   @id @default(uuid())
  title     String
  genre     String?
  artistId  String
  audioUrl  String   @db.Text // Use TEXT to store long Cloudinary URLs
  publicId  String   @db.Text // Cloudinary public_id for deletion
  duration  Int?     // Duration in seconds
  size      Int?     // File size in bytes
  format    String?  // Audio format (mp3, wav, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  artist           User              @relation(fields: [artistId], references: [id], onDelete: Cascade)
  fingerprint      AudioFingerprint?
  originalMatches  DuplicateMatch[]  @relation("OriginalSong")
  duplicateMatches DuplicateMatch[]  @relation("DuplicateSong")
  playHistory      PlayHistory[]     // Play history for this song
  favorites        Favorite[]        // Users who favorited this song
  playlistSongs    PlaylistSong[]    // Playlists containing this song

  @@index([artistId])
  @@index([createdAt])
  @@map("songs")
}

// Audio Fingerprint model for Milestone 5
model AudioFingerprint {
  id          String   @id @default(uuid())
  songId      String   @unique
  fingerprint String   @db.LongText // JSON array of landmarks
  duration    Int                   // Duration in seconds
  sampleRate  Int      @default(22050)
  createdAt   DateTime @default(now())

  // Relations
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
  @@map("audio_fingerprints")
}

// Duplicate Match model for Milestone 5
model DuplicateMatch {
  id                String      @id @default(uuid())
  originalSongId    String
  duplicateSongId   String
  similarity        Float                // Match score (0-100%)
  matchingLandmarks Int                  // Number of matching landmarks
  status            MatchStatus @default(PENDING)
  reviewedBy        String?              // Admin who reviewed
  reviewedAt        DateTime?
  resolution        String?              // Notes on resolution
  notes             String?     @db.Text
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  originalSong  Song  @relation("OriginalSong", fields: [originalSongId], references: [id], onDelete: Cascade)
  duplicateSong Song  @relation("DuplicateSong", fields: [duplicateSongId], references: [id], onDelete: Cascade)
  reviewer      User? @relation(fields: [reviewedBy], references: [id], onDelete: SetNull)

  @@index([originalSongId])
  @@index([duplicateSongId])
  @@index([status])
  @@map("duplicate_matches")
}

// Play History - Track when users play songs
model PlayHistory {
  id        String   @id @default(uuid())
  userId    String
  songId    String
  playedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([songId])
  @@index([playedAt])
  @@map("play_history")
}

// Favorites - User favorite songs
model Favorite {
  id        String   @id @default(uuid())
  userId    String
  songId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@index([userId])
  @@index([songId])
  @@map("favorites")
}

// Playlists - User-created playlists
model Playlist {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  songs PlaylistSong[]

  @@index([userId])
  @@map("playlists")
}

// PlaylistSong - Songs in playlists (join table)
model PlaylistSong {
  id         String   @id @default(uuid())
  playlistId String
  songId     String
  position   Int
  addedAt    DateTime @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  song     Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([playlistId, songId])
  @@index([playlistId])
  @@index([songId])
  @@map("playlist_songs")
}

// Follow - Artist followers
model Follow {
  id         String   @id @default(uuid())
  followerId String   // The user who follows
  artistId   String   // The artist being followed
  createdAt  DateTime @default(now())

  follower User @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  artist   User @relation("Following", fields: [artistId], references: [id], onDelete: Cascade)

  @@unique([followerId, artistId])
  @@index([followerId])
  @@index([artistId])
  @@map("follows")
}
